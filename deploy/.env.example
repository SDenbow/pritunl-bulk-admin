# =========
# Core app
# =========

# App environment (prod|dev)
APP_ENV=prod

# Required: SQLAlchemy DB URL (container-to-container hostname is "db")
# Example:
DATABASE_URL=postgresql+psycopg2://pritunl_admin:CHANGE_ME@db:5432/pritunl_admin

# Required: Session cookie signing secret (long random string)
SESSION_SECRET=CHANGE_ME_LONG_RANDOM

# Required: Master key used to decrypt/encrypt sensitive values in DB (targets creds, etc.)
PRITUNL_UI_MASTER_KEY=CHANGE_ME_LONG_RANDOM

# Required for secure first-run bootstrap (setup routes require this token until first admin is created)
SETUP_TOKEN=CHANGE_ME_BOOTSTRAP_TOKEN

# Optional: allow destructive delete operations in importer/apply
ALLOW_DELETE=false

# =========
# Postgres
# =========
POSTGRES_DB=pritunl_admin
POSTGRES_USER=pritunl_admin
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

